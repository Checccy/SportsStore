@model SportsStore.Web.Areas.ProductArea.Models.LogOnViewModel
@{
    ViewBag.Title = "LogOn";
    Layout = "~/Areas/ProductArea/Views/Shared/_Layout.cshtml";
}

<h2>LogOn</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <dl >
        <dt>@Html.DisplayNameFor(model=>model.UserName)</dt>
        <dd>@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" }})</dd>
        <dt>@Html.DisplayNameFor(model => model.Password)</dt>
        <dd>@Html.EditorFor(model=>model.Password, new { htmlAttributes = new { @class = "form-control" } })</dd>
    </dl>
    <p><input type="submit" value="Log in" class="btn btn-info" /></p>
}
